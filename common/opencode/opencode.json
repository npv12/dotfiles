{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-google-antigravity-auth@0.2.12",
    "@mohak34/opencode-notifier",
    "@plannotator/opencode",
    "opencode-openai-codex-auth"
