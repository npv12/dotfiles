{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "@mohak34/opencode-notifier"
  ],
  "formatter": false,
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp?tavilyApiKey={env:TAVILY_API_KEY}"
    }
  }
}
